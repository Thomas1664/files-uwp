<Page
    x:Class="Files.SettingsPages.Multitasking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:datamodels="using:Files.DataModels"
    xmlns:local="using:Files.SettingsPages"
    xmlns:local2="using:Files"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel
                Margin="12,12,8,8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Spacing="14">
                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>

                <TextBlock
                    x:Uid="SettingsMultitaskingTitle"
                    FontSize="22"
                    FontWeight="Medium"
                    Text="Multitasking" />

                <StackPanel Spacing="12" Orientation="Vertical">
                    <TextBlock FontSize="18" Text="Multitasking options for every user"/>
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="AdaptiveMultToggle" IsChecked="{x:Bind AppSettings.IsMultitaskingExperienceAdaptive, Mode=OneWay}" Checked="AdaptiveMultToggle_Checked" Content="Adaptive (Recommended)"/>
                        <TextBlock Foreground="{ThemeResource SystemColorGrayTextColor}" TextWrapping="WrapWholeWords" MaxWidth="450" Text="Selects the best multitasking control based on how the app window is resized. When the window is small, you'll notice the horizontal tab strip is collapsed into a flyout on the navigation toolbar." HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="HorizontalMultToggle" IsChecked="{x:Bind AppSettings.IsHorizontalTabStripEnabled, Mode=OneWay}" Checked="HorizontalMultToggle_Checked" Content="Horizontal"/>
                        <TextBlock Foreground="{ThemeResource SystemColorGrayTextColor}" TextWrapping="WrapWholeWords" MaxWidth="450" Text="Always hides the vertical multitasking flyout from the navigation toolbar, and shows the traditional horizontal tabstrip on the app window. This is suited for users who need to keep track of every open app instance at all times." HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="VerticalMultToggle" IsChecked="{x:Bind AppSettings.IsVerticalTabFlyoutEnabled, Mode=OneWay}" Checked="VerticalMultToggle_Checked" Content="Vertical"/>
                        <TextBlock Foreground="{ThemeResource SystemColorGrayTextColor}" TextWrapping="WrapWholeWords" MaxWidth="450" Text="Collapses the horizontal list of app instances into a vertical flyout on the navigation toolbar, designed for users who want a clean app interface with on-demand access to a multitasking experience." HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>